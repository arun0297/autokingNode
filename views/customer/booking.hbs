      <form action="/list" id="bookingForm" method="get">
        <div id="one" class="step active">
          <div class="top">
            <h2>Vehicle Details</h2>
          </div>

          <div class="formcontainer">
            <div class="form-group">
              <p>Vehicle Type</p>
              <div class="form-radio">
                <div class="radio">
                  <label>
                    <input type="radio" value="2" class="feecal req" name="vehicleType"/><i class="helper"></i>2 - Wheeler
                  </label>
                </div>
                <div class="radio">
                  <label>
                    <input type="radio" value="4" class="feecal req" data-req="required" name="vehicleType"/><i class="helper"></i>4 - Wheeler
                  </label>
                </div>
              </div>
            </div>
          </div>

          <div class="button-container">
            <button class="button stepbtn" id="btnone" data-href="#two" data-step="#one" data-perc="40%" type="button"><span>Next &rarr;</span></button>
          </div>
        </div>
        <div id="two" class="step">
          <div class="top">
            <h2>About Vehicle</h2>
          </div>
          <div class="form-group">
            <input type="text" autocomplete="off" id="brand" name="brand" class="req" maxlength="60"/>
            <label class="control-label">Vehicle Brand</label><i class="bar"></i>
            <div class="autoComplete shdw2" id="brands">
              <ul>
              </ul>
            </div>
          </div>
          <div class="form-group">
            <input type="text" autocomplete="off" id="model" name="model" class="req" maxlength="60"/>
            <label class="control-label">Vehicle Model</label><i class="bar"></i>
            <div class="autoComplete shdw2" id="models">
              <ul>
              </ul>
            </div>
          </div>
          <div class="form-group">
            <select class="req" name="fuel">
              <option selected="selected" disabled>Select Fuel type</option>
              <option value="Petrol">Petrol</option>
              <option value="Petrol">Diesel</option>
              <option value="Petrol">Hybrid</option>
              <option value="Petrol">Electric</option>
              <option value="Petrol">CNG</option>
              <option value="Petrol">Octane 97</option>
            </select>
            <label class="control-label">Fuel Type</label><i class="bar"></i>
          </div>
          <div class="button-container">
            <input type="hidden" name="lat" id="lat" class="req"/>
            <input type="hidden" name="lng" id="lng" class="req"/>
            <button type="button" class="button" id="loc" name="button"><span>Select Location</span></button>
          </div>
          <div class="button-container">
            <button class="button stepbtn" id="btntwo" data-step="#two" data-href="#three" data-perc="60%" type="button"><span>Next &rarr;</span></button>
          </div>
        </div>
        <div id="three" class="step">
          <div class="top">
            <h2>Services To be done</h2>
          </div>
        <div class="form-group">
          <p>Select services to be made in your vehicle</p>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="1" name="service" /><i class="helper"></i>General Service
            </label>
            <label>
              <input type="checkbox" value="2" name="service" /><i class="helper"></i>Oil Change
            </label>
            <label>
              <input type="checkbox" name="service" value="3"><i class="helper"></i>Complete Breakdown
            </label>
            <label>
              <input type="checkbox" name="service" value="4"><i class="helper"></i>Clutch and Brakes Issue
            </label>
            <label>
              <input type="checkbox" name="service" value="5"><i class="helper"></i>Electrical Issue
            </label>
            <label>
              <input type="checkbox" name="service" value="6"><i class="helper"></i>Filter change
            </label>
            <label>
              <input type="checkbox" name="service" value="7"><i class="helper"></i>Re-Painting/Scratch Removal
            </label>
            <label>
              <input type="checkbox" name="service" value="8"><i class="helper"></i>Tyre Puncture/Replacement
            </label>
            <label>
              <input type="checkbox" name="service" value="9"><i class="helper"></i>Parts Change
            </label>
            <label>
              <input type="checkbox" name="service" value="9"><i class="helper"></i>Other
            </label>
          </div>
        </div>
        <div class="button-container">
          <button class="button" disabled id="submit" type="submit"><span>Show service centers</span></button>
        </div>
        </div>
