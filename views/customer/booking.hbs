    <div id="container">
      <div id="percline"></div>
      <div class="back">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
      </div>

          <div class="mapModal">
            <div class="modalHead">
              <div class="close">
                x
              </div>
              <h2>Click on the map to select the exact location</h2>
            </div>
            <div class="modalBody">
              <div id="map"></div>
            </div>
