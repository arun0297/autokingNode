        <input type="text" id="autocomplete" name="loc" value="">
        <input type="hidden" name="lat" id="lat">
        <input type="hidden" name="lng" id="lng">
      </div>
      <div class="filter">
        <label for="text">Pick and Drop</label>
        <input type="radio" name="pnd" value="1">Yes
        <input type="radio" name="pnd" value="0">No
      </div>
      <div class="btnholder">
        <button type="submit" name="button">Apply Filters</button>
      </div>
    </form>
