        <form id="bookingForm">
          <div id="four" class="step active">
            <div class="top">
              <h2>Schedule Booking</h2>
            </div>
            <div class="form-group">
              <input type="text" name="date" class="req" data-provide="datepicker"/>
              <label class="control-label">Schedule Date</label><i class="bar"></i>
            </div>
            <div class="batch-label-container">
              <label class="batch-label">Select Time</label>
              <div class="batch-time">
                <span id="start-time"></span>
                <span> - </span>
                <span id="end-time"></span>
              </div>
            </div>
            <div id="time-slider"></div>
            <div class="checkbox">
              <label>
                <input type="checkbox" value=true name="pnd" class="req"/><i class="helper"></i>Pick and drop service required (*Extra charges applicable for this service)</a>
              </label>
            </div>
            <div class="button-container">
              <button class="button stepbtn" id="one" data-step="#four" data-href="#five" data-perc="100%" type="button"><span>Next &rarr;</span></button>
            </div>
          </div>
          <div id="five" class="step">
            <div class="top">
              <h2>Confirm your details</h2>
            </div>
            <div class="form-group">
              <input type="tel" data-inp="number" value="{{{umob}}}" name="mobile" class="req"/>
              <label class="control-label">Mobile Number</label><i class="bar"></i>
            </div>
            <div class="form-group">
              <input type="email" name="email" value="{{{uemail}}}" class="req"/>
              <label class="control-label">E-Mail</label><i class="bar"></i>
            </div>
            <div class="form-group" id="pnda">
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" value="agree" name="terms" class="req"/><i class="helper"></i>Accept <a href="#" target="_blank">Terms and Conditions</a>
              </label>
            </div>
            <div class="button-container">
              <button class="button stepbtn" id="otpbtn" data-step="#five" data-href="#six" data-perc="100%" type="button"><span>Next &rarr;</span></button>
            </div>
          </div>
          <div id="six" class="step">
            <div class="top">
              <h2>Verify its you</h2>
            </div>
            <div class="form-group">
              <input type="tel" data-inp="number" autocomplete="off" name="bookotp" class="req"/>
              <label class="control-label">OTP</label><i class="bar"></i>
            </div>
            <a href="#">Resend OTP</a>
            <div class="button-container">
              <button type="submit" class="button" name="button"><span>Complete Booking</span></button>
            </div>
          </div>
        </div>
        </form>
    </div>
    <section id="mobileNav">
      <div id="close">
        X
